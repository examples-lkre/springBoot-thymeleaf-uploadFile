<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %magenta(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.fontbox.ttf.GlyphSubstitutionTable" level="OFF"/>
    <logger name="org.apache.fontbox.ttf.PostScriptTable" level="OFF"/>
    <logger name="org.apache.pdfbox.io.ScratchFileBuffer" level="OFF"/>
    <logger name="org.apache.pdfbox.pdfparser.PDFObjectStreamParser" level="OFF"/>
    <logger name="org.apache.pdfbox.pdmodel.font.PDCIDFontType2" level="OFF"/>
    <logger name="org.fit.pdfdom.PDFBoxTree" level="OFF"/>
    <logger name="org.mabb.fontverter.opentype.OpenTypeTable" level="OFF"/>
    <logger name="org.mabb.fontverter.opentype.TtfInstructions.TtfInstructionParser" level="OFF"/>
    <logger name="org.reflections.Reflections" level="OFF"/>

    <!--    <root level="TRACE">-->
    <!--        <appender-ref ref="STDOUT"/>-->
    <!--    </root>-->
</configuration>